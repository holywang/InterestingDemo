<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.holy.interestingdemo.funnywrite.NovelWriteActivity"
    tools:showIn="@layout/activity_novel_write">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/novel_write_show_session"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:textColor="#000000"
                android:textSize="@dimen/text_margin"
                android:text="第一章"
                />
            <TextView
                android:id="@+id/novel_write_select_novel_text_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:textColor="#aaaaaa"
                android:textSize="@dimen/text_margin"
                android:text="字数200/10000"
                />
            <Button
                android:id="@+id/novel_write_add_session"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加一章"/>
        </LinearLayout>


        <EditText
            android:id="@+id/novel_write_edit_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:padding="10dp"
            android:scrollbars="vertical"
            android:singleLine="true"
            android:focusable="true"
            android:hint="请输入小节名"
            android:maxLength="20"
            android:background="@null"
            android:textSize="@dimen/text_margin"
            />

        <EditText
            android:id="@+id/novel_input_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:padding="10dp"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:focusable="true"
            android:inputType="textMultiLine"
            android:hint="@string/edit_input_hint"
            android:minLines="25"
            android:gravity="top"
            android:background="@null"
            android:textSize="@dimen/text_margin"
            />




    </LinearLayout>

</android.support.constraint.ConstraintLayout>
