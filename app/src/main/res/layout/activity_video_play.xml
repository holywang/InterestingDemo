<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.holy.interestingdemo.funnyplayer.VideoPlayActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#555555"
        android:gravity="center"
        android:orientation="horizontal">

        <TextureView
            android:id="@+id/player_texture_view"
            android:layout_width="match_parent"
            android:layout_height="300dp" />
    </LinearLayout>

    <Button
        android:id="@+id/video_player_back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:alpha="0.3"
        android:text="back" />

    <Button
        android:id="@+id/video_player_last"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="350dp"
        android:alpha="0.8"
        android:text="last" />

    <Button
        android:id="@+id/video_player_pause"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="350dp"
        android:alpha="0.8"
        android:text="pause" />

    <Button
        android:id="@+id/video_player_next"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="350dp"
        android:alpha="0.8"
        android:text="next" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="350dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/video_player_current"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="next" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="/" />

        <TextView
            android:id="@+id/video_player_time"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="next" />
    </LinearLayout>


    <SeekBar
        android:id="@+id/video_player_progress"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="250dp" />

</RelativeLayout>
